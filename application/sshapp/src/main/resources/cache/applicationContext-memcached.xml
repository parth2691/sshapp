<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd"
  default-lazy-init="true">

  <!-- SpyMemcached客户端 -->
  <bean id="spyClientFactory" class="org.springside.modules.memcached.SpyMemcachedClientFactory">
    <!-- 设置Memcached集群 -->
    <property name="memcachedNodes" value="${memcache_server}" />
    <!-- 缩短Timeout时间到200毫秒 -->
    <property name="operationTimeout" value="200" />
  </bean>

  <!-- 注意只能用于测试-->
  <bean class="org.springside.modules.memcached.JmemcachedServer" lazy-init="false" />
</beans>